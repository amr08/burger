<h1>Burgers</h1>



<h2>Add a Burger</h2>
<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <textarea type="text" name="burger_name"></textarea>
   <button type="submit">Add Burger</button>
  </div>


</form>


  <div class="form-group">
    <label for="devou">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured<br>
    <input type="radio" name="devoured" value="0"> Available
  </div>

  <button type="submit">Add Burger</button>


<h2>Burgers that are eaten</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devoured</button>
        </form>

      
      </li>
    {{/unless}}
  {{/each}}
</ul>



<h2>Burgers available</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Eat</button>
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    <li>
      <p>
        {{this.id}}. {{this.burger_name}}

        <form action="/delete?_method=DELETE" method="POST">
          <input type="hidden" name="id" value="{{this.id}}">
          <button type="submit">Delete Burger!</button>
        </form>
      </p>
    </li>
  {{/each}}
</ul>

